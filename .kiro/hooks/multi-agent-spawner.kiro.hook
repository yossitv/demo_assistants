{
  "enabled": true,
  "name": "Multi-Agent Environment Spawner",
  "description": "On agentSpawn, create a tmux session and spawn orchestrator / engineer / reviewer agents in panes based on the spec JSON.",
  "version": "1",
  "when": {
    "type": "agentSpawn"
  },
  "then": {
    "type": "exec",
    "command": "bash",
    "args": [".kiro/hooks/spawn_multi_agent.sh"],
    "timeout_ms": 60000
  }
}
